@using Emarket.Core.Application.ViewModels.Ad;
@model SaveAdsVM;
@{
    ViewData["Title"] = "Eliminar anuncio";

}
<div class="container-fluid">
    <div class="card w-50 mx-auto mt-5">
        <div class="card-header bg-info ">
            <h5 class="card-title fs-5 text-dark">Estas seguro que deseas eliminar el producto @Model.Name ?</h5>
        </div>
        <div class="card-body mx-auto">
            <form method="post" asp-controller="Ad" asp-action="DeleteAdVMPost" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger mx-auto">Eliminar</button>
                <a asp-controller="Ad" asp-action="Index" class="btn btn-warning mx-auto">Cancelar</a>
            </form>
        </div>
    </div>
</div>