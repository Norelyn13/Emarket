@using Emarket.Core.Application.ViewModels.User;
@model  LoginVM;
@{ 
    ViewData["Title"] = "Iniciar Sesion";
}

<div class="container-fluid ">
    <form method="post" asp-controller="User" asp-action="Login">
        <div class="row">
            <div class="col-10 offset-2 my-5">
                <div class="card bg-transparent border-0 w-75">
                    <div class="card-header text-center">
                        <h3>Iniciar Sesion</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="mb-3 col-6 offset-3 text-center">
                                <label asp-for="Username" class="form-label">Nombre de usuario</label>
                                <input asp-for="Username" class="form-control">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-6 offset-3 text-center">
                                <label asp-for="Password" class="form-label">Contraseña</label>
                                <input asp-for="Password" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            @if (Model.validate)
                            {
                                <div class="mb-3 col-8 offset-2 text-center">
                                    <span>@Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>
                                </div>
                            }
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary me-2 mt-2">Iniciar sesion</button>
                                <a type="button" asp-controller="User" asp-action="Register" class="btn btn-success ms-2 mt-2">Registrarse</a>
                            </div>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>