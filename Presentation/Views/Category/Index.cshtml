@using Emarket.Core.Application.ViewModels.Categories;
@model List<CategoryVM>;
@{
    ViewData["Title"] = "Categorias";

}
<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <h1 class="mt-4 mb-4 ps-2">Categorias</h1>
        </div>
        <div class="text-end col-8 mt-4 pe-2 mb-4">
            <a asp-controller="Category" asp-action="SaveCategoryVM" type="button" class="btn btn-outline-primary btn-sm">
                Agregar nueva categoria
            </a>
        </div>
    </div>
    @if (Model.Count == 0)
    {
        <h2 class="modal-title">No hay Categorias creadas</h2>
        <p class="text-body">Si desea crear alguna categoria pulse en el boton de "Agregar nueva categoria"!</p>
    }
    else
    {
        <div class=" m-1 row mt-3">
            @foreach (CategoryVM item in Model)
            {
                <div class="col-md-4 mx-auto">
                    <div class="card mb-3 bg-transparent border-2 border-dark">
                        <div class="card-header border-1 border-dark">
                            <h5 class="card-title">@item.Name</h5>
                        </div>
                        <div class="card-body bg-transparent text-dark">
                            <p class="card-text">@item.Description</p>                           
                            <div class=" d-grid gap-1 d-md-flex ">
                                <div class="small m-1">
                                    <p class="btn-outline-danger"><strong>@item.AdQuantity anuncios - @item.AdOwnerQuantity usuarios</strong></p>
                                </div>
                                <div class="justify-content-md-end ps-1">
                                    <a asp-controller="Category" asp-action="EditCategoryVM" asp-route-id="@item.Id" type="button" class="btn btn-warning btn-sm">Editar</a>
                                    <a asp-controller="Category" asp-action="DeleteCategoryVM" asp-route-id="@item.Id" type="button" class="btn btn-danger btn-sm">Eliminar</a>
                                </div>                              
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>